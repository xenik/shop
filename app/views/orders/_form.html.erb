  <div class="field">
    <%= f.label "Отчество" %><br />
    <%= f.text_field :middlename, size: 30 %>
  </div>
  <div class="field">
    <%= f.label "Адрес" %><br />
    <%= f.text_field :address, rows: 3, cols: 40 %>
  </div>
  <div class="field">
    <%= f.label "Телефон" %><br />
    <%= f.text_field :phone, size: 30 %>
  </div>
  <div class="field">
    <%= f.label "e-mail" %><br />
    <%= f.text_field :email, size: 30 %>
  </div>  
  <div class="field">
    <%= f.label "Комментарий" %><br />
    <%= f.text_field :comment, rows: 2, cols: 40%>
  </div>
